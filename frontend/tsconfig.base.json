{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/core": ["src/app/core/src/index.ts"],
      "@app/layout": ["src/app/layout/src/index.ts"],
      "@app/layout/*": ["src/app/layout/src/lib/*"],
      "@app/pages/confirmation-code": [
        "src/app/pages/registration/confirmation-code/src/index.ts"
      ],
      "@app/pages/create-password": [
        "src/app/pages/registration/create-password/src/index.ts"
      ],
      "@app/pages/login": ["src/app/pages/login/src/index.ts"],
      "@app/pages/main": ["src/app/pages/main/src/index.ts"],
      "@app/pages/registration": [
        "src/app/pages/registration/registration/src/index.ts"
      ],
      "@app/pages/registration-success": [
        "src/app/pages/registration/registration-success/src/index.ts"
      ],
      "@app/pages/reset-password": [
        "src/app/pages/reset-password/src/index.ts"
      ],
      "@app/pages/registration-shell": [
        "src/app/pages/registration/registration-shell/src/index.ts"
      ],
      "@app/shared/*": ["src/app/shared/*"],
      "@app/ui/common/*": ["src/app/shared/ui/common/src/lib/*"],
      "@env": ["src/environments/index.ts"],
      "@swagger/models": ["src/app/swagger/models.ts"],
      "@swagger/services/*": ["src/app/swagger/services/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
